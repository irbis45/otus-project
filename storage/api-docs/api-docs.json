{
    "openapi": "3.0.0",
    "info": {
        "title": "News API",
        "description": "API для новостного портала",
        "version": "2.0"
    },
    "paths": {
        "/api/v1/news": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Получить список новостей с пагинацией",
                "operationId": "getNewsList",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Количество записей на странице",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Номер страницы",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список новостей",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/News"
                                            }
                                        },
                                        "meta": {
                                            "properties": {
                                                "total": {
                                                    "type": "integer"
                                                },
                                                "limit": {
                                                    "type": "integer"
                                                },
                                                "offset": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "News"
                ],
                "summary": "Создать новость",
                "operationId": "createNews",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewsCreateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Новость успешно создана",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/News"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка в данных запроса"
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/news/{id}": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Получить новость по ID",
                "operationId": "getNewsById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID новости",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Данные новости",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/News"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Новость не найдена"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "News"
                ],
                "summary": "Обновить новость",
                "operationId": "updateNews",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID новости",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewsUpdateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Новость обновлена",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/News"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка в данных запроса"
                    },
                    "404": {
                        "description": "Новость не найдена"
                    },
                    "500": {
                        "description": "Ошибка при сохранении новости"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "News"
                ],
                "summary": "Удалить новость",
                "operationId": "deleteNews",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID новости",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Новость удалена"
                    },
                    "404": {
                        "description": "Новость не найдена"
                    },
                    "500": {
                        "description": "Ошибка при удалении новости"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Авторизация пользователя",
                "operationId": "0276d5604f1d547a5a0e295954593a2b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешный вход, возвращает токен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неверные учетные данные",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Выход пользователя (отзыв токена)",
                "operationId": "317fd0e1bb43fe6ab338e4ca19352b75",
                "responses": {
                    "200": {
                        "description": "Успешный выход",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неавторизован"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "RegisterRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Иван Иванов"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "ivan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "password123"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "ivan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "password123"
                    }
                },
                "type": "object"
            },
            "AuthTokenResponse": {
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "eyJ0eXAiOiJKV1QiLCJhbGci..."
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "error": {
                        "type": "string",
                        "example": "Invalid credentials"
                    }
                },
                "type": "object"
            },
            "News": {
                "title": "News",
                "required": [
                    "id",
                    "title",
                    "content"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 123
                    },
                    "title": {
                        "type": "string",
                        "example": "Заголовок новости"
                    },
                    "content": {
                        "type": "string",
                        "example": "Текст новости"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "Краткое описание новости",
                        "nullable": true
                    },
                    "author_id": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 5,
                        "nullable": true
                    },
                    "published_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "active": {
                        "type": "boolean",
                        "example": true
                    },
                    "featured": {
                        "type": "boolean",
                        "example": false
                    },
                    "thumbnail": {
                        "description": "URL миниатюры",
                        "type": "string",
                        "format": "url",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "NewsCreateRequest": {
                "required": [
                    "title",
                    "content",
                    "category_id"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Новая новость"
                    },
                    "content": {
                        "type": "string",
                        "example": "Текст новости"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "Краткое описание новости",
                        "nullable": true
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "published_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "active": {
                        "type": "boolean",
                        "example": true
                    },
                    "featured": {
                        "type": "boolean",
                        "example": false
                    },
                    "thumbnail_url": {
                        "description": "URL загружаемой миниатюры (по умолчанию null)",
                        "type": "string",
                        "format": "url",
                        "example": null,
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "NewsUpdateRequest": {
                "required": [],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Обновлённый заголовок"
                    },
                    "content": {
                        "type": "string",
                        "example": "Обновлённый текст"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "Краткое описание новости",
                        "nullable": true
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 3
                    },
                    "published_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "active": {
                        "type": "boolean",
                        "example": false
                    },
                    "featured": {
                        "type": "boolean",
                        "example": false
                    },
                    "thumbnail_url": {
                        "description": "URL загружаемой миниатюры (по умолчанию null)",
                        "type": "string",
                        "format": "url",
                        "example": null,
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Авторизация и регистрация пользователей"
        },
        {
            "name": "News",
            "description": "API для управления новостями"
        }
    ]
}